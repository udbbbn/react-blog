{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node", 
        "allowSyntheticDefaultImports":true,
        "module": "es2015",
        "target": "es6",
        "jsx": "preserve",
        "baseUrl": ".",                       /* Base directory to resolve non-absolute module names. */
        "paths": {
            "@": [
                "src/*"
            ]
        },  
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
        "./src/**/*",
        "./typing/*"
    ]
}